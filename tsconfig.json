{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "unplugin-icons/types/vue"
        ],
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "ui/*"
            ],
            "@store/*": [
                "ui/store/*"
            ],
            "@pages/*": [
                "/ui/pages"
            ],
            "@components/*": [
                "/ui/components/*"
            ],
            "@assets/*": [
                "/ui/assets/*"
            ]
        }
    },
    "include": [
        "ui/**/*.ts",
        "ui/**/*.d.ts",
        "ui/**/*.tsx",
        "ui/**/*.vue",
        "components.d.ts"
    ]
}
